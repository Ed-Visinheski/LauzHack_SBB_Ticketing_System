{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MacOS Enviroment Setup",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/setup.sh",
                "macos"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Ubuntu Enviroment Setup",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/setup.sh",
                "ubuntu"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "mkdir -p build && cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. && cmake --build . --parallel"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}